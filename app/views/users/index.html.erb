<div class="container">
    <h1>Users</h1>
    <table class="table table-dark table-hover" style="width: auto;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                <th>show</th>
                <th>Delete</th>
                <th>Update</th>
                <!-- <th colspan="3"></th> -->
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.city%></td>
                <td><%= link_to 'Show', user_registration_path %></td>
                <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <!-- <%= link_to 'New User', new_user_path %> -->
    <%= link_to 'back', root_path %>
</div>